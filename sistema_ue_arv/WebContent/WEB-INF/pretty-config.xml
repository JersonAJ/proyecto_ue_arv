<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/login.xhtml" />
	</url-mapping>
	
	<url-mapping id="inicio">
		<pattern value="/inicio" />
		<view-id value="/inicio.xhtml" />
	</url-mapping>
	
	<url-mapping id="usuario">
		<pattern value="/seg/usuario" />
		<view-id value="/seguridad/usuario.xhtml" />
	</url-mapping>
	
	<url-mapping id="perfil">
		<pattern value="/seg/perfil" />
		<view-id value="/seguridad/perfil.xhtml" />
	</url-mapping>
	
	<!-- ERRORES -->	
	<url-mapping id="error">
		<pattern value="/err/sesion" />
		<view-id value="/errores/error_sesion.xhtml" />
	</url-mapping>
	
	<url-mapping id="error404">
		<pattern value="/err/nopag" />
		<view-id value="/errores/error_no_pag.xhtml" />
	</url-mapping>

</pretty-config>